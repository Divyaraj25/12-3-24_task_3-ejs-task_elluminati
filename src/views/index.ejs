<%-include('header')%>
    <%-include('navbar')%>
        <div class="container-fluid">
            <section id="appendData">

                <%if(count!=0){%>
                    <%data.forEach(user=>{%>
                        <div class="row mx-5 table border" id="<%=user._id%>">
                            <div class="col-2" id="profileImage"><img src="<%=user.path%>" id="userProfileImage"
                                    alt="Profile Image" />
                            </div>
                            <div class="col-6" id="details">
                                <div class="row">
                                    <div class="col-4 mt-4">
                                        <h4 id="namelabel">Name : </h4>
                                        <h4 id="emaillabel">Email : </h4>
                                        <h4 id="contactlabel">Contact no : </h4>
                                    </div>
                                    <div class="col-8 mt-4">
                                        <h4 id="Name">
                                            <%=user.username%>

                                        </h4>
                                        <h4 id="Email">
                                            <%=user.email%>

                                        </h4>
                                        <h4 id="Contact">
                                            <%=user.contact%>

                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="d-none" id="showprofileimage"></div>
                            <div class="col-3 d-flex flex-column justify-content-center" id="buttons">

                                <button class="btn btn-danger m-3 w-100 fs-4" id="delete">Delete</button>
                                <button class="btn btn-primary m-3 w-100 fs-4" type="button" data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"
                                    id="edit">Edit</button>
                            </div>
                        </div>
                        <%})%>

                            <%}else{%>
                                <h1 class="table border p-5 text-center">No Data Found</h1>
                                <%}%>
            </section>
            <ul class="pagination pagination-lg justify-content-center">
                <%for(let i=0;i<pages;i++){%>
                    <%if(i==0){%>
                        <li class="page-item"><button class="page-link active" id="pageno">
                                <%=i+1%>
                            </button></li>
                        <%}else{%>
                            <li class="page-item"><button class="page-link" id="pageno">
                                    <%=i+1%>
                                </button></li>
                            <%}%>
                                <%}%>

            </ul>

        </div>

        <%-include('footer')%>